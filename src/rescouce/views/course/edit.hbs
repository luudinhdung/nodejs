<div class="search">
    <form method="POST" action="/course/{{courses._id}}?_method=PUT">
  <div class="form-group">
    <label for="name">Tên Khoá Học</label>
    <input type="text" value="{{courses.name}}" name="name" class="form-control" id="name" aria-describedby="emailHelp">
  </div>
  <div class="form-group">
    <label for="description">description</label>
    <input type="text" value="{{courses.description}}" name="description" class="form-control" id="description" aria-describedby="emailHelp">
  </div>
    <div class="form-group">
    <label for="videoID">IdImage</label>
    <input type="text" value="{{courses.IdImage}}" name="IdImage" class="form-control" id="IdImage" aria-describedby="emailHelp">
  </div>

  <div class="form-group">
    <label for="videoID">videoID</label>
    <input type="text" value="{{courses.videoID}}" name="videoID" class="form-control" id="videoID" aria-describedby="emailHelp">
  </div>

  <button type="submit" class="btn btn-primary">Finish Edit</button>
 
</form>
</div>

